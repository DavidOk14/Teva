<LoginScreen>:
    Screen:
        # Color Background - Currently Defaults to Dark Mode
        canvas.before:
            Color:
                rgba: 0.17, 0.17, 0.18, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Render Login Page Titlte
        Label:
            text: "Teva (Build 5.14.24)"
            font_size: 32
            color: 1, 1, 1, 1
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}

        # Render Login Page Text Fields
        MDTextField:
            mode: "fill"
            text_color_focus: "black"
            text_color_normal: "#29292a"
            theme_bg_color: "Custom"
            fill_color_normal: 1, 1, 1, .2
            hint_text: "Username"
            icon_right: 'account'
            font_size: 20
            size_hint_x: .85
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        MDTextField:
            mode: "fill"
            text_color_focus: "black"
            text_color_normal: "#29292a"
            theme_bg_color: "Custom"
            fill_color_normal: 1, 1, 1, .2
            hint_text: "Password"
            password: True
            icon_right: 'eye-off'
            font_size: 20
            size_hint_x: .85
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        # Render Login Page Buttons -- TODO: ADD SHOW PASSWORD FIELD - NAVIGATE FROM SIGN UP - VERIFY LOGIN WHEN DB IS IMPLEMENTED
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: .8, None
            spacing: "25dp"
            pos_hint: {'center_x': .5, 'center_y': 0.4}  # Center the MDBoxLayout
            MDRectangleFlatButton:
                text: "Login"
                size_hint_x: .4
                md_bg_color: app.theme_cls.primary_color  # Filled tonal color
                text_color: 1, 1, 1, 1  # Text color
            MDRectangleFlatButton:
                text: "Sign Up"
                size_hint_x: .4
                md_bg_color: app.theme_cls.primary_color  # Filled tonal color
                text_color: 1, 1, 1, 1  # Text color